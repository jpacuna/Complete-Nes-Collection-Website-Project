<header>
    <h1 id="company_logo">Complete-Nes Collection</h1>
    <h2 id="logo_heading">For all your Nes Needs</h2>
    <%= form_tag search_results_path, id: 'search', method: 'get' do %>   
        <%= text_field_tag :search_keywords %>
        <%= collection_select params[:genre_selected], :ids, Genre.all, :id, :name, :selected=> :id %>
        <%= submit_tag "Seach" %>
    <% end %>
    <nav id="top_navigation">
        <ul>
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'All Games', games_path %></li>
            <li><%= link_to 'By Genre', genres_path %></li>
            <li><%= link_to 'By Publisher', publishers_path %></li>
            <li><%= link_to 'By Developer', developers_path %></li>
            <li><%= link_to 'Sale', sales_path %></li>
            <li><%= link_to "Recently Added", new_games_path %></li>
            <li><%= link_to 'About Us', about_us_path %></li>
            <li><%= link_to 'Admin Log In', admin_dashboard_path %></li>
        </ul>
    </nav>

</header>